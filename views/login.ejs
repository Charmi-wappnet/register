<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Login</title>
    <script>
        function validate() {  
            var email_address= document.login_form.email_address;
            var password = document.login_form.password; 
            
            if (email_address.value.length <= 0) {  
            alert("Enter email");  
            email_address.focus();  
            return false;  
        }
            if (password.value.length <= 0) {    
                alert("Enter password");    
                password.focus();    
                return false;    
        }
    }
   </script>
</head>
<body>
    <div class="container">
        <h1>Login Form</h1>
        <p><%=(typeof alertMsg!='undefined')? alertMsg:''%></p>
              <form action="/login" name="login_form" method="POST" onSubmit="return validate();">
        
        <div class="form-gruop">
            <label for="email" class="form-label">Email ID</label>
            <input type="text" class="form-control" name="email_address" placeholder="Enter your email id">
        </div>

        <div class="form-gruop">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Enter your password">
        </div> <br><br>

        <button class="btn btn-primary" onclick="window.location='/login'">Login Now</button>
        <button class="btn btn-primary" onclick="window.location='/register';", value="click here">New Registration</button>
        <button class="btn btn-primary" onclick="window.location='/save';", value="click here">Edit User</button>
        

    </div>   
</form>
</div>
</body>
</html>